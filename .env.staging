# Staging Environment Configuration for SEO Bot
# Copy this to .env and customize for your staging deployment

#################################
# Application Configuration
#################################
NODE_ENV=staging
ENVIRONMENT=staging
APP_NAME="SEO Bot (Staging)"
APP_URL=https://staging.your-domain.com
DEBUG=true
LOG_LEVEL=debug

#################################
# Database Configuration
#################################
# PostgreSQL Database URL
DATABASE_URL=postgresql://seo_bot_user:staging_password@postgres:5432/seo_bot_staging

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=0
DB_POOL_TIMEOUT=30

#################################
# Redis Configuration
#################################
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=staging_redis_password

#################################
# Frontend Configuration
#################################
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
VITE_APP_URL=https://staging.your-domain.com
VITE_APP_NAME="SEO Bot (Staging)"
VITE_ENABLE_ANALYTICS=false
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key

#################################
# Backend API Configuration
#################################
SECRET_KEY=staging_secret_key_min_32_chars
JWT_SECRET_KEY=staging_jwt_secret_key_min_32_chars
JWT_ACCESS_TOKEN_EXPIRES=24
API_V1_STR=/api/v1

#################################
# External API Keys (Test/Sandbox)
#################################
# Google APIs
GOOGLE_SEARCH_CONSOLE_CREDENTIALS_FILE=/app/config/gsc-staging-credentials.json
PAGESPEED_API_KEY=your_staging_pagespeed_api_key
GOOGLE_API_KEY=your_staging_google_api_key

# SEO APIs
SERP_API_KEY=your_staging_serpapi_key
DATAFORSEO_LOGIN=your_staging_dataforseo_login
DATAFORSEO_PASSWORD=your_staging_dataforseo_password

# AI Services
OPENAI_API_KEY=sk-your_staging_openai_api_key
ANTHROPIC_API_KEY=your_staging_anthropic_api_key

# Payment Processing (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

#################################
# Email Configuration
#################################
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
SMTP_TLS=true
FROM_EMAIL=staging@your-domain.com

#################################
# Monitoring & Observability
#################################
SENTRY_DSN=your_staging_sentry_dsn
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=staging_grafana_password

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:14268/api/traces
OTEL_SERVICE_NAME=seo-bot-staging
OTEL_RESOURCE_ATTRIBUTES=service.version=1.0.0,environment=staging

#################################
# File Storage
#################################
# AWS S3 for file storage and backups
AWS_ACCESS_KEY_ID=your_staging_aws_access_key
AWS_SECRET_ACCESS_KEY=your_staging_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=seo-bot-staging-storage
BACKUP_S3_BUCKET=seo-bot-staging-backups

#################################
# Security Configuration
#################################
ALLOWED_HOSTS=staging.your-domain.com,staging-api.your-domain.com
CORS_ORIGINS=https://staging.your-domain.com
SECURE_SSL_REDIRECT=true
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

#################################
# Rate Limiting (More Permissive)
#################################
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=200
AUTH_RATE_LIMIT_PER_MINUTE=10

#################################
# Background Jobs
#################################
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_TIME_LIMIT=1800

#################################
# Performance & Caching
#################################
CACHE_TTL=1800
STATIC_FILES_CDN=https://staging-cdn.your-domain.com
ENABLE_GZIP=true
ENABLE_BROTLI=true

#################################
# Feature Flags
#################################
ENABLE_REGISTRATION=true
ENABLE_AI_CONTENT=true
ENABLE_WEBHOOKS=true
ENABLE_REALTIME_UPDATES=true

#################################
# Backup Configuration
#################################
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 3 * * *"  # Daily at 3 AM
BACKUP_ENCRYPTION_KEY=staging_backup_encryption_key